<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmActivity">

    <Switch
        android:id="@+id/switch_monday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="12dp"
        android:paddingStart="48dp"
        android:text="Monday"
        android:textAlignment="textStart"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_tuesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:paddingStart="48dp"
        android:text="Tuesday"
        android:textAlignment="textStart"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/switch_monday"
        tools:layout_editor_absoluteX="8dp" />

    <Switch
        android:id="@+id/switch_wednesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:paddingStart="48dp"
        android:text="Wednesday"
        android:textAlignment="textStart"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/switch_tuesday"
        tools:layout_editor_absoluteX="8dp" />

    <Switch
        android:id="@+id/switch_thursday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:paddingStart="48dp"
        android:text="Thursday"
        android:textAlignment="textStart"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/switch_wednesday" />

    <Switch
        android:id="@+id/switch_friday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:paddingStart="48dp"
        android:text="Friday"
        android:textAlignment="textStart"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/switch_thursday"
        tools:layout_editor_absoluteX="8dp" />

    <Switch
        android:id="@+id/switch_saturday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:paddingStart="48dp"
        android:text="Saturday"
        android:textAlignment="textStart"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/switch_friday"
        tools:layout_editor_absoluteX="16dp" />

    <Switch
        android:id="@+id/switch_sunday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:paddingStart="48dp"
        android:text="Sunday"
        android:textAlignment="textStart"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/switch_saturday"
        tools:layout_editor_absoluteX="8dp" />


    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Tap to edit"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_sunday" />

</android.support.constraint.ConstraintLayout>