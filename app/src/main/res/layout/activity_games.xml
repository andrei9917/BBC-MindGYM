<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    tools:context=".GamesActivity">

    <ImageButton
        android:id="@+id/game_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher_final_web"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/game_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher_final_web"
        app:layout_constraintTop_toBottomOf="@+id/game_button_1"
        tools:layout_editor_absoluteX="8dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/game_button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher_final_web"
        app:layout_constraintTop_toBottomOf="@+id/game_button_2"
        tools:layout_editor_absoluteX="102dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/game_button_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher_final_web"
        app:layout_constraintTop_toBottomOf="@+id/game_button_3"
        tools:layout_editor_absoluteX="112dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/game_button_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/game_button_4"
        app:srcCompat="@mipmap/ic_launcher_final_web"
        tools:layout_editor_absoluteX="110dp" />
</android.support.constraint.ConstraintLayout>